<div class='row'>
    <div class='col-sm'>
        <h1>Waiter Manager API posting</h1>
    </div>
    <div class='col-sm'>
        <form action="/api/get/all/data" method="GET">
            <button style='margin-top:5px' type="submit" class="btn btn-outline-dark">All Data</button>
        </form>
    </div>
</div>
<div class='row'>
    <div class='col-sm border'>
        <h3>Add a new waiter:</h3>
        <form action="/api/add/waiter" method="POST">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">First name</span>
                </div>
                <input name='first' type="text" class="form-control" placeholder="'Dyllan'" aria-label="Username"
                    aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">Last name</span>
                </div>
                <input name='last' type="text" class="form-control" placeholder="'Hope'" aria-label="Username"
                    aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">Password</span>
                </div>
                <input name='pass' type="text" class="form-control" placeholder="'lF2$@35*3'" aria-label="Username"
                    aria-describedby="basic-addon1">
            </div>
            <button style='margin-bottom:5px' type="submit" class="btn btn-outline-primary">Submit</button>
        </form>
    </div>
    <div class='col-sm-1'></div>
    <div class='col-sm border'>
        <h3>Select shift day for:</h3>
        <form action="/api/shift/waiter" method="POST">
            {{!-- first name of user --}}
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">First name</span>
                </div>
                <input name='user' type="text" class="form-control" placeholder="'Dyllan'" aria-label="Username"
                    aria-describedby="basic-addon1">
            </div>
            {{!-- Checkboxes --}}
            <div class="form-check form-check-inline">
                <input name='shifts' class="form-check-input" type="checkbox" id="inlineCheckbox1" value="Monday">
                <label class="form-check-label" for="inlineCheckbox1">Monday</label>
            </div>
            <div class="form-check form-check-inline">
                <input name='shifts' class="form-check-input" type="checkbox" id="inlineCheckbox2" value="Tuesday">
                <label class="form-check-label" for="inlineCheckbox2">Tuesday</label>
            </div>
            <div class="form-check form-check-inline">
                <input name='shifts' class="form-check-input" type="checkbox" id="inlineCheckbox3" value="Wednesday">
                <label class="form-check-label" for="inlineCheckbox3">Wednesday</label>
            </div>
            <div class="form-check form-check-inline">
                <input name='shifts' class="form-check-input" type="checkbox" id="inlineCheckbox4" value="Thursday">
                <label class="form-check-label" for="inlineCheckbox4">Thursday</label>
            </div>
            <div class="form-check form-check-inline">
                <input name='shifts' class="form-check-input" type="checkbox" id="inlineCheckbox5" value="Friday">
                <label class="form-check-label" for="inlineCheckbox5">Friday</label>
            </div>
            <div class="form-check form-check-inline">
                <input name='shifts' class="form-check-input" type="checkbox" id="inlineCheckbox6" value="Saturday">
                <label class="form-check-label" for="inlineCheckbox6">Saturday</label>
            </div>
            <div class="form-check form-check-inline">
                <input name='shifts' class="form-check-input" type="checkbox" id="inlineCheckbox7" value="Sunday">
                <label class="form-check-label" for="inlineCheckbox7">Sunday</label>
            </div>
            <br>
            <button type="submit" class="btn btn-outline-primary">Submit</button>
        </form>
    </div>
</div>